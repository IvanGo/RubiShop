<h1>Listing line_items</h1>


<% @line_items.each do |line_item| %>
<div class="cart_item">
  <div>
    <div class="cart_item_image">
      <img src="" alt="^_^">
    </div>
    <div class="cart_item_name">
      <%= line_item.bow_id %>
    </div>
    <div class="cart_item_name">
      <%= line_item.crossbow_id %>
    </div>
    <div class="cart_item_price">
      <%= line_item.cart_id %>
    </div>
    <div class="btn btn-grey btn-large">
      <%= link_to 'Убрать', line_item, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
</div>
<% end %>

<br>

<%= link_to 'New Line item', new_line_item_path %>
