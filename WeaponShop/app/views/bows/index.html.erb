<h1>Listing bows</h1>
<div>
    <% @bows.each do |bw| %>
      
        <div class="product-block" style="float :left">
          <div class="white-wrap">
            <a class="model-name" title="Купить"  href="/bows/<%= bw.id %>" target="_blank" rel="nofollow"><%= bw.name %> </a>
            <a class="photo-wrap" href="/bows/<%= bw.id %>" target="_blank" rel="nofollow">
            <span><img height="180" width="180" src="http://i3.aport.ru/images/offers/17741/type4/842586c6.jpg" alt="Шарики Paintballs New Formular Kal .43 rot-orange "></span></a>
          </div>
          <div class="gradient-wrap"><a class="btn btn-grey btn-large" title="Купить" href="/static_pages/cart" target="_blank" rel="nofollow">Купить <span class="count"><%= bw.producer %></span></a>
            
            <div class="separator-dotted">
            </div>
            
          </div>
      </div>
      
    <% end %>
</div>

<div>
  <%= link_to 'New Bow', new_bow_path %>
</div>
